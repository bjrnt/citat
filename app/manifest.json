{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "0.0.0",
  "description": "Some kind of description for my extension",

  "permissions": [
    "tabs",
    "storage"
  ],
  "offline_enabled": true,

  "options_page": "pages/options.html",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles/content.css"
      ]
    }
  ]
}
